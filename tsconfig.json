{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".", // <-- required to set alias paths
    "paths": {
      // https://docs.astro.build/en/guides/aliases/
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["config/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["lib/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["src/styles/*"],
    }
  }
}