---
import { Image } from 'astro:assets';
import qpBackground from '../assets/queens-park-background.jpg';
import tboLogo from '../assets/tbo-logo.webp';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <div class="top-bar">
      <a href="/">
        <Image src={tboLogo} alt="Take Back Ontario Logo" class="subpage-logo" />
      </a>
    </div>
		<Image src={qpBackground} alt="Queen's Park Background" class="qp-background" />
		<slot />
	</body>
</html>
<style is:global>

	html {
		font-family: system-ui, sans-serif;
		background: #e9e9ea;
		background-size: 224px;
	}
	.qp-background {
		position: fixed;
		bottom: 0;
		object-fit: contain;
		object-position: center;
		z-index: -2;
	}
	.main-content {
		background-color: rgba(255,255,255,0.5);
		padding: 1em;
		border-radius: 20px;
	}
	.btn {
		background-color: #ed2228;
		color: #fff;
		padding: 1rem 2rem;
		border-radius: 8px;
		font-size: 1.5rem;
		font-weight: 700;
		text-decoration: none;
		display: block;
		width: 190px;
		text-align: center;
	}
  .subpage-logo {
    position: relative;
    height: 100%;   
    width: auto; 
    max-width: 200px;
    padding: 1em;
  }
  .top-bar {
    display: flex;
    justify-content: center;
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    z-index: 1;
    border-bottom: 1px solid #d0d0d0;
  }
  p {
		padding-bottom: 1em;
	}
</style>
